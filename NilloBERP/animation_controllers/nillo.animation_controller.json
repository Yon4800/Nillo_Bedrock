{
    "format_version": "1.20.41",
    "animation_controllers": {
        "controller.animation.nillo.walk": {
            "initial_state": "standing",
            "states": {
                "standing": {
                    "blend_transition": 0.2,
                    "animations": ["nillo_scaled"],
                    "transitions": [
                        {
                            "moving": "q.modified_move_speed > 0.1"
                        }
                    ]
                },
                "moving": {
                    "blend_transition": 0.2,
                    "animations": ["nillo_walk"],
                    "transitions": [
                        {
                            "standing": "q.modified_move_speed < 0.1"
                        }
                    ]
                }
            }
        },
        "controller.animation.nillo.baby": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "state_1": "query.is_baby"
                        }
                    ]
                },
                "state_1": {
                    "animations": [
                        "nillo_baby"
                    ],
                    "transitions": [
                        {
                            "default": "query.all_animations_finished"
                        }
                    ]
                }
            }
        },
        "controller.animation.nillo.attack": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "attacking": "q.is_delayed_attacking"
                        }
                    ]
                },
                "attacking": {
                    "blend_transition": 0.2,
                    "animations": ["nillo_attack"],
                    "transitions": [
                        {
                            "default": "!q.is_delayed_attacking"
                        }
                    ]
                }
            }
        }
    }
}